public class Main
{
    public static boolean sortedArr(int arr[]){
        for (int i=0;i<arr.length-1; i++ ) {
            if((arr[i+1]-arr[i])!=1) return false;
            
        }
        return true;
    }
	public static void main(String[] args) {
	    int arr[]={1,2,3,4,5};
	    int arr1[]={1,3,4,5};
		System.out.println(sortedArr(arr));
		System.out.println(sortedArr(arr1));
	}
}
