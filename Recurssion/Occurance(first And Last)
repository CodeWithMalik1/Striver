public class FirstOccurance {

    public static int indexprint(int arr[],int target,int i){
        
         if(i==arr.length) return i;
      
         if(arr[i]==target) return i;
        //  System.out.println(i);
        return  indexprint(arr, target, i+1);
         

        
    }
    public static int lastOccurance(int arr[],int target,int i){
        
        if(i==arr.length-1) return -1;
        int result=lastOccurance(arr, target, i+1);
        if(result==-1 && arr[i]==target) result=i;
        return result;

    }
    public static void main(String[] args) {
        int arr[]={2,3,4,5,4,3,0,9};
        System.out.println(indexprint(arr, 4, 0));
        System.out.println(lastOccurance(arr, 4, 0));
    }
    
}
